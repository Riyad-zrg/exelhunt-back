{% extends '/base.html.twig' %}

{% block title %}Création d'une chasse{% endblock %}

{% block body %}
    <link href="{{ asset('styles/createHunt.css') }}" rel="stylesheet">
    <script src="{{ asset('js/imagePreview.js') }}"></script>
    <div class="creation_puzzle d-flex flex-column align-items-center vh-100">

        <!-- HEADER -->
        <div class="vw-100 d-flex justify-content-between align-items-center p-3 creation_puzzle_header">
            <button class="btn btn-danger" onclick="window.history.back()">Annuler</button>
            <h2 class="text-center mb-0 flex-grow-1" style="font-weight: bold;">Créer une chasse</h2>
            <button class="btn btn-success save-button" type="submit" form="creationForm">Enregistrer</button>
        </div>

        <!-- Main -->
        <div class="main">

            <!-- Media Upload -->
            <div class="puzzle_media_div">
                <label for="upload-input" class="file-upload-label" id="upload-label">
                    <div class="icon-container">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="#fff" viewBox="0 0 24 24">
                            <path d="M21 19V5a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2zM5 5h14v14H5V5zm4 8l2.5 3 3-4 4 5H5l4-4z"/>
                        </svg>
                    </div>
                    <div class="text">Ajoute une image de couverture</div>
                </label>
                <input type="file" id="upload-input" accept="image/*" class="custom-file-input">
            </div>


            <!-- Preview -->
            <div id="preview"></div>

            <!-- Formulaire -->
            <div class="form-container">
                <div class="form-group">
                    <p>Titre</p>
                    <input type="text" name="title" placeholder="Entrez le titre" maxlength="30">
                </div>

                <div class="form-group">
                    <p>Description</p>
                    <textarea name="description" class="description-input" placeholder="Entrez la description" maxlength="500"></textarea>
                </div>

                <div class="form-group">
                    <p>Jouable en équipe</p>
                    <select name="hunt_type">
                        <option value="solo">Oui</option>
                        <option value="team">Non</option>
                    </select>
                </div>
            </div>

            <!-- Questions -->
            <div class="questions-container">
                <div class="question-card">
                    <div class="question-image">
                        <img src="{{ asset('images/Image_PlaceHolder.png') }}" alt="Question Image">
                    </div>
                    <div class="question-info">
                        <h4>Question 1</h4>
                        <p>2+2</p>
                    </div>
                </div>

                <div class="question-card">
                    <div class="question-image">
                        <img src="{{ asset('images/Image_PlaceHolder.png') }}" alt="Question Image">
                    </div>
                    <div class="question-info">
                        <h4>Question 2</h4>
                        <p>3+5</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
