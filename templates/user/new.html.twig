{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
    {% include 'components/_header.html.twig' %}
    <div class="page-form">
        <div class="form-card">
            <h1 class="form-title">S'inscrire</h1>

            {{ form_start(form, {'attr': {'class': 'form-grid'}}) }}
            {{ form_row(form.nickname, {'row_attr': {'class': 'full'}}) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email, {'row_attr': {'class': 'full'}}) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}

            <div class="full">
                {% include 'components/_avatarUpload.html.twig' with { field: form.avatar } %}
            </div>
            <input type="hidden" id="avatar-cropped" name="avatar_cropped">

            <div id="avatar-modal" class="avatar-modal hidden">
                <div class="avatar-dialog">
                    <div class="avatar-crop-area" id="avatar-crop">
                        <img id="avatar-crop-image" draggable="false" alt="avatar">
                        <div class="avatar-circle"></div>
                    </div>
                    <div class="avatar-actions">
                        <input type="range" id="avatar-zoom" min="0.5" max="3" step="0.01" value="1">
                        <button type="button" class="btn btn-secondary" id="avatar-cancel">Annuler</button>
                        <button type="button" class="btn btn-primary" id="avatar-apply">Utiliser</button>
                    </div>
                </div>
            </div>

            {{ form_row(form.biography, {'row_attr': {'class': 'full'}}) }}
            {{ form_row(form.Address, {'row_attr': {'class': 'full'}, 'label': false}) }}

            <div class="actions full">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    {% include 'components/_footer.html.twig' %}
{% endblock %}
